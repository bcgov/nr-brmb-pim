<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:oauth="http://www.springframework.org/schema/security/oauth2"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security/oauth2 http://www.springframework.org/schema/security/spring-security-oauth2-1.0.xsd">

	<bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>classpath:test.properties</value>
			</list>
		</property>
	</bean>

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties" ref="applicationProperties" />
	</bean>

	<bean id="cirrasUnderwritingDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url" value="jdbc:postgresql://pgsql01.vividsolutions.com:5432/cirras_dev" /> 
		<property name="username" value="proxy_cuws_rest" />
		<property name="password" value="password" />
        <property name="connectionProperties">
            <props>
                <prop key="socketTimeout">10</prop>
            </props>
        </property>
	</bean>

	<bean id="bootstrapDataSource" class="oracle.jdbc.pool.OracleDataSource" destroy-method="close">
		<property name="URL" value="${webade.datasource.url}" />
		<property name="user" value="${webade.datasource.username}" />
		<property name="password" value="${webade.datasource.password}" />
	</bean>
	
</beans>